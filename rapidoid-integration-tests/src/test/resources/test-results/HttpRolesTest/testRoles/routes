Route DELETE /del [segment main] roles [administrator, eraser, manager] : json(Ctrl#del())
Route GET /a [segment main] roles [aa, bb] : json(() -> ...)
Route GET /hi [segment main] roles [administrator, manager, moderator] : json(Ctrl#hi())
Route GET /ok [segment main] roles [] : json(() -> ...)
Route HEAD /h [segment main] roles [logged_in] : json(Ctrl#h())
Route OPTIONS /opt [segment main] roles [logged_in, a, b, anybody] : json(Ctrl#opt())
Route PATCH /p3 [segment main] roles [patcher] : json(Ctrl#p3())
Route POST /p1 [segment main] roles [administrator] : json(Ctrl#p1())
Route PUT /p2 [segment main] roles [moderator] : json(Ctrl#p2())